{
  "type": "commonjs",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.php": [
      "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --diff --using-cache=no"
    ],
    "resources/**/*.{js,jsx,ts,tsx,vue}": [
      "prettier --write"
    ],
    "resources/**/*.{css,scss,sass,less}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,vue}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "prepare": "husky"
  }
}
